<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#DBDBDB"
    tools:context="com.doomers.hackpaytm.SetReminderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#fff"
        android:layout_weight="1.2"
        android:layout_marginBottom="15dp">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/mic"
            android:background="#DBDBDB"
            android:layout_margin="4dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="yes"
            android:id="@+id/textinputSpeech"
            android:textColor="#000"
            android:layout_marginLeft="15dp"
            android:textStyle="italic"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#4385F5"
        android:text="Do you want to set this reminder?"
        android:textColor="#fff"
        android:textStyle="italic"
        android:textSize="15sp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="6">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:paddingLeft="5dp"
            android:id="@+id/description"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="10dp"
            android:background="#ffffff"
            android:hint="Enter the description"/>

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="7dp"
            android:textColor="#000"
            android:paddingLeft="7dp"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="#000"
            android:paddingLeft="7dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="#000"
            android:layout_marginBottom="7dp"
            android:paddingLeft="7dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:textColor="#4385F5"
            android:textStyle="bold"
            android:background="#ffffff"
            android:text="Remind me at this time"/>


    </LinearLayout>

</LinearLayout>

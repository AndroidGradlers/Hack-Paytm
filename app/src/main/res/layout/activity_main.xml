<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context="com.doomers.hackpaytm.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.cuboid.cuboidcirclebutton.CuboidButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Add\n Amount"
            android:id="@+id/offlinedeposit"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            app:cub_border_radius="0dp"
            app:cub_color="#02BCED"
            app:cub_hover_color="#072D6E"
            android:layout_marginRight="20dp"
            app:cub_riple_effect="true"
            android:layout_alignTop="@+id/addareminder"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <com.cuboid.cuboidcirclebutton.CuboidButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/addareminder"
            android:text="Set \n Reminder"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            app:cub_border_radius="0dp"
            android:textStyle="bold"
            app:cub_color="#02BCED"
            app:cub_hover_color="#072D6E"
            android:layout_marginRight="20dp"
            app:cub_riple_effect="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:src="@drawable/paytm"
        android:textColor="#FFFF00"
        android:id="@+id/textView2"
        android:textSize="45sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="103dp" />

</RelativeLayout>

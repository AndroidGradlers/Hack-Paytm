<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.doomers.hackpaytm.MainActivity">

    <com.cuboid.cuboidcirclebutton.CuboidButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="Make A Desposit"
        android:id="@+id/offlinedeposit"
        android:textColor="@android:color/white"
        android:textSize="14dp"
        app:cub_border_radius="0dp"
        app:cub_color="#eaba49"
        app:cub_hover_color="#FF5722"
        android:layout_marginRight="20dp"
        app:cub_riple_effect="true"
        android:layout_alignTop="@+id/addareminder"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.cuboid.cuboidcirclebutton.CuboidButton
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/addareminder"
        android:text="Add a Remainder"
        android:textColor="@android:color/white"
        android:textSize="14dp"
        app:cub_border_radius="0dp"
        app:cub_color="#eaba49"
        app:cub_hover_color="#FF5722"
        android:layout_marginRight="20dp"
        app:cub_riple_effect="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Paytm"
        android:textColor="#FFFF00"
        android:id="@+id/textView2"
        android:textSize="45sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="103dp" />

</RelativeLayout>
